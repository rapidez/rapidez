{
    "name": "rapidez/rapidez",
    "type": "project",
    "description": "Headless Magento with Laravel, Vue and Reactive Search",
    "keywords": [
        "rapidez"
    ],
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.9",
        "rapidez/account": "^3.1",
        "rapidez/core": "^3.4.0",
        "rapidez/image-resizer": "^3.1",
        "rapidez/menu": "^3.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.1",
        "laravel/pint": "^1.21",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.9.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Rapidez\\Core\\Tests\\": "vendor/rapidez/core/tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "local-repos": [
            "composer config repositories.core path ../core",
            "composer config repositories.account path ../account",
            "composer config repositories.image-resizer path ../image-resizer",
            "composer config repositories.menu path ../menu",
            "composer require rapidez/core:'dev-master as 3.0.0' rapidez/account:'dev-master as 3.0.0' rapidez/image-resizer:'dev-master as 3.0.0' rapidez/menu:'dev-master as 3.0.0'"
        ],
        "analyse": "phpstan --memory-limit=256M",
        "style": "pint --test",
        "fix-style": "pint",
        "symlink-frontend": [
            "ln -s ../core/package.json package.json",
            "ln -s ../core/tailwind.config.js tailwind.config.js",
            "ln -s ../core/vite.config.js vite.config.js"
        ]
    }
}
